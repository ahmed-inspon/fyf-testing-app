
<span class="fyf-extension fyf-app-block" data-product-id="{{ product.id }}" style="color: {{ block.settings.color }}" data-store-name="{{ shop.name }}">
  {% render "main-snippet" %}
</span>
{% schema %}
{
  "name": "Fyf-Block",
  "target": "section",
  "stylesheet": "app.css",
  "javascript": "app-block.js",
  "settings": [
    {
      "label": "Color",
      "id": "color",
      "type": "color",
      "default": "#000000"
    }
  ]
}
{% endschema %}
